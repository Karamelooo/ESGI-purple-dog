generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64", "linux-musl-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  PRO
  ADMIN
}

enum AdStatus {
  DRAFT
  PENDING
  ACTIVE
  REJECTED
  SOLD
  EXPIRED
}

enum AdType {
  AUCTION
  SALE
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  name          String?
  password      String
  role          Role           @default(USER)
  createdAt     DateTime       @default(now())
  isBlocked     Boolean        @default(false)

  // Profile fields
  photoUrl      String?

  // Pro fields
  companyName   String?
  siret         String?
  specialties   String?

  // Relations
  ads           Ad[]
  bids          Bid[]
  notifications Notification[]
  messages      Message[]
  purchases     Ad[]           @relation("BuyerAds")
  reviewsWritten  Review[]     @relation("ReviewsWritten")
  reviewsReceived Review[]     @relation("ReviewsReceived")
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  slug  String @unique

  commissionRateBuyer  Float?
  commissionRateSeller Float?
  formConfig           Json?

  ads   Ad[]
}

model Ad {
  id          Int      @id @default(autoincrement())
  title       String
  description String

  // Details
  dimensions  String?
  weight      Float?

  // Images & Docs
  images      String[]
  documents   String[]

  // Location
  location    String?

  // Status & Type
  status      AdStatus @default(PENDING)
  type        AdType

  // Pricing / Auction
  price        Float?
  reservePrice Float?
  buyNowPrice  Float?

  startDate   DateTime  @default(now())
  endDate     DateTime?

  // Relations
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])

  customAttributes Json?

  userId      Int
  user        User      @relation(fields: [userId], references: [id])

  buyerId     Int?
  buyer       User?     @relation("BuyerAds", fields: [buyerId], references: [id])

  bids        Bid[]
  messages    Message[]
  transactions Transaction[]
  delivery     Delivery?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Bid {
  id        Int      @id @default(autoincrement())
  amount    Float

  userId    Int
  user      User @relation(fields: [userId], references: [id])

  adId      Int
  ad        Ad   @relation(fields: [adId], references: [id])

  isAutoBid Boolean  @default(false)
  maxLimit  Float?

  createdAt DateTime @default(now())
}

model Notification {
  id        Int      @id @default(autoincrement())
  message   String
  read      Boolean  @default(false)
  link      String?

  userId    Int
  user      User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  createdAt DateTime @default(now())

  adId      Int
  ad        Ad @relation(fields: [adId], references: [id])

  userId    Int
  user      User @relation(fields: [userId], references: [id])

  @@index([adId])
}

model GlobalSettings {
  id                    Int      @id @default(autoincrement())
  commissionRateBuyer   Float    @default(0.0)
  commissionRateSeller  Float    @default(0.0)
  updatedAt             DateTime @updatedAt
}

model Review {
  id        Int      @id @default(autoincrement())
  rating    Int
  comment   String?

  authorId  Int
  author    User @relation("ReviewsWritten", fields: [authorId], references: [id])

  targetId  Int
  target    User @relation("ReviewsReceived", fields: [targetId], references: [id])

  createdAt DateTime @default(now())
}

model Transaction {
  id               Int      @id @default(autoincrement())
  amount           Float
  commissionAmount Float
  type             String
  status           String
  stripePaymentId  String?

  adId             Int
  ad               Ad @relation(fields: [adId], references: [id])

  createdAt        DateTime @default(now())
}

model Delivery {
  id             Int      @id @default(autoincrement())
  status         String
  trackingNumber String?
  carrier        String?

  adId           Int      @unique
  ad             Ad       @relation(fields: [adId], references: [id])

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model DeliveryPlatform {
  id        Int      @id @default(autoincrement())
  name      String
  slug      String   @unique
  isActive  Boolean  @default(false)
  config    Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
